---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Iniciar Sesión">
    <div class="container flex justify-center items-center" style="min-height: 80vh;">
        <div class="card" style="width: 100%; max-width: 400px;">
            <h1 class="text-center" style="color: var(--color-primary); margin-bottom: 2rem;">Acceder</h1>
            
            <form id="login-form">
                <div class="mb-2">
                    <label for="user" style="display: block; margin-bottom: 0.5rem;">Usuario</label>
                    <input type="text" id="user" name="user" required style="width: 100%; padding: 0.8rem; border: 1px solid #ddd; border-radius: 8px;">
                </div>
                
                <div class="mb-2">
                    <label for="pwd" style="display: block; margin-bottom: 0.5rem;">Contraseña</label>
                    <input type="password" id="pwd" name="pwd" required style="width: 100%; padding: 0.8rem; border: 1px solid #ddd; border-radius: 8px;">
                </div>

                <div id="error-msg" style="color: var(--color-error); display: none; margin-bottom: 1rem; text-align: center;"></div>

                <button type="submit" class="btn btn-primary" style="width: 100%;">Iniciar Sesión</button>
            </form>
             <p class="text-center mt-2">
                ¿No tienes cuenta? <a href="/register" style="color: var(--color-primary); font-weight: 600;">Regístrate aquí</a>
            </p>
        </div>
    </div>
</Layout>

<script>
    import { api } from '../utils/api';

    const form = document.getElementById('login-form');
    const errorMsg = document.getElementById('error-msg');

    if (form) {
        form.addEventListener('submit', async (e) => {
            e.preventDefault();
            errorMsg.style.display = 'none';
            errorMsg.textContent = '';

            const formData = new FormData(form as HTMLFormElement);
            const data = Object.fromEntries(formData);

            try {
                await api.post('/auth/login', data);
                // Redirect on success
                window.location.href = '/'; // Go to home page
            } catch (err: any) {
                errorMsg.textContent = err.message || 'Error al iniciar sesión';
                errorMsg.style.display = 'block';
            }
        });
    }
</script>
